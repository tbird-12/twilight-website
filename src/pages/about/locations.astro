---
import ServiceLayout from "../../layouts/ServiceLayout.astro";
import "../../styles/global.css";

const locations = [
  {
    type: "Main Office",
    providers: "Heather Cornett, Emeli Evans, Tiffany Roundtree",
    address: "501 Darby Creek Rd., Suite 7 (Downstairs)",
    city: "Lexington, KY 40509",
    mapLink:
      "https://www.google.com/maps/search/?api=1&query=Twilight+Psychology,+PLLC,+501+Darby+Creek+Rd+UNIT+7,+Lexington,+KY+40509",
  },
  {
    type: "Satellite Office",
    providers: "Jonica Davis & Stephen Shu",
    address: "525 Darby Creek Rd., Suite 27",
    city: "Lexington, KY 40509",
    mapLink:
      "https://www.google.com/maps/search/?api=1&query=525+Darby+Creek+Rd+Suite+27+Lexington+KY+40509",
  },
  {
    type: "Medication Management",
    providers: "Nicola Allen",
    address: "1040 Monarch St., Office 305",
    city: "Lexington, KY 40513",
    mapLink:
      "https://www.google.com/maps/search/?api=1&query=1040+Monarch+St+Office+305+Lexington+KY+40513",
  },
];
---

<ServiceLayout
  name="Office Locations | Twilight Psychology Lexington KY"
  description="Discover our three specialized office locations in Lexington, KY, designed to provide tailored environments for therapy, testing, and medication management. Each suite offers privacy and state-of-the-art facilities to support your mental health journey."
>
  <section class="py-20 px-6 border-b border-white/5 bg-indigo-900/10">
    <div class="max-w-4xl mx-auto text-center">
      <span
        class="px-4 py-1.5 mb-6 text-[10px] font-black tracking-[0.4em] text-amber-500 uppercase bg-amber-500/10 border border-amber-500/20 rounded-full inline-block"
      >
        Lexington, Kentucky
      </span>
      <h1 class="text-4xl  md:text-8xl font-black text-white mb-6 tracking-tighter leading-[0.9]">
        Our <span
          class="text-transparent bg-clip-text bg-linear-to-r from-[#D4CFC7] to-white italic"
          >Locations.</span
        >
      </h1>
      <p class="text-indigo-200/60 font-medium max-w-xl mx-auto">
        Providing specialized clinical environments tailored to testing,
        therapy, and psychiatric care.
      </p>
    </div>
  </section>

  <section class="max-w-4xl mx-auto px-6 -mt-8 relative z-20 space-y-6">
    <div
      class="bg-amber-500 text-indigo-950 p-6 rounded-2xl shadow-xl flex items-center gap-4"
    >
      <span class="text-2xl">üóìÔ∏è</span>
      <p class="font-bold text-sm sm:text-base">
        <strong>All visits are by appointment only.</strong> If you plan to drop by without one, 
        please call before visiting our office to ensure staff are present and available to assist you.
      </p>
    </div>
    <div
      class="bg-indigo-900/30 border border-amber-500/30 text-indigo-100 p-6 rounded-2xl flex items-center gap-4"
    >
      <p class="font-bold text-sm sm:text-base">
        Curious about how long we're booked out? Check our <a href="/resources/waitlist-times" class="text-amber-400 underline hover:text-amber-300 transition-colors">current waitlist times</a> to see when appointments are available.
      </p>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-6 py-20">
    <div class="grid lg:grid-cols-3 gap-8">
      {
        locations.map((loc) => (
          <div class="bg-white/5 border border-white/10 rounded-[2.5rem] p-10 flex flex-col justify-between hover:border-amber-500/30 transition-all group">
            <div>
              <div class="mb-6">
                <h2 class="text-2xl font-black text-white group-hover:text-amber-500 transition-colors">
                  {loc.type}
                </h2>
                <p class="text-[10px] font-black uppercase tracking-widest text-indigo-400 mt-1">
                  Providers:
                </p>
                <p class="text-sm font-bold text-[#D4CFC7]">{loc.providers}</p>
              </div>

              <div class="space-y-1 mb-10">
                <p class="text-lg font-medium text-white/90">{loc.address}</p>
                <p class="text-indigo-200/50">{loc.city}</p>
              </div>
            </div>

            <a
              href={loc.mapLink}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center gap-2 w-full py-4 bg-white/5 border border-white/10 rounded-xl font-black text-xs uppercase tracking-widest hover:bg-white hover:text-indigo-950 transition-all"
            >
              Get Directions <span>‚Üó</span>
            </a>
          </div>
        ))
      }
    </div>
  </section>

  <section class="max-w-4xl mx-auto px-6 py-12 text-center">
    <div class="p-12 bg-indigo-900/20 border border-white/5 rounded-[3rem]">
      <h3 class="text-2xl font-black mb-4 italic text-white!">Choosing the Right Door</h3>
      <p class="text-indigo-200/60 leading-relaxed mb-0">
        Twilight Psychology operates out of three distinct suites to provide
        privacy and specialized equipment for our patients. Please double-check
        your appointment reminder for your specific suite number before your
        visit.
      </p>
    </div>
  </section>
</ServiceLayout>
