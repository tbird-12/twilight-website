---
import Layout from '../../layouts/Layout.astro';
import '../../styles/global.css';
import { providers } from '../../data/staff';
---

<Layout title="Our Team | Twilight Psychology">
  <section id="about" class="py-24 bg-gradient-to-br from-white to-amber-50">
    <div class="max-w-5xl mx-auto px-6 text-center">
      <h3 class="text-3xl font-bold text-gray-900">About Our Practice</h3>
      <p class="mt-6 text-lg text-gray-700 leading-relaxed">
        We provide inclusive, traumaâ€‘informed, and culturally sensitive care. Our therapists bring warmth, expertise, and a collaborative approach to every session.
      </p>
    </div>
  </section>

  <section class="py-24 bg-white">
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Meet Our Team</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {providers.map((person) => (
          <a href={`/about/clinicians/${person.slug}`} class="group bg-gradient-to-br from-indigo-50 to-amber-50 rounded-2xl p-8 hover:shadow-2xl transition-all hover:-translate-y-2 border border-indigo-100">
            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-amber-600 transition-colors">{person.name}</h3>
            <p class="text-sm font-semibold text-indigo-600 uppercase tracking-wide mb-4">{person.spec}</p>
            <span class="text-amber-600 group-hover:text-amber-700 font-bold inline-flex items-center gap-2">
              View Profile 
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 5l7 7-7 7" stroke-width="2"></path></svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>