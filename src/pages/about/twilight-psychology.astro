---
import ServiceLayout from "../../layouts/ServiceLayout.astro";
import "../../styles/global.css";

const values = [
  {
    title: "Accessibility Without Compromise",
    desc: "We believe quality mental health care is a right, not a privilege. By accepting most insurances—including Commercial, KY Medicaid, and Medicare—and prioritizing faster appointment times, we ensure answers are within reach.",
    icon: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
  },
  {
    title: "Clinical Clarity",
    desc: "We provide a comprehensive lens through which to understand the self. We are committed to providing precise, evidence-based insights that serve as the foundation for an improved quality of life.",
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
  },
  {
    title: "Neuro-Affirming Advocacy",
    desc: "We don't view neurodivergence as a deficit to be cured, but as a vital part of a person's identity. We honor different ways of thinking, being, and experiencing the world.",
    icon: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z",
  },
  {
    title: "Holistic Continuity",
    desc: "Healing isn't linear, and it shouldn't be fragmented. By housing evaluation, therapy, and medication management under one roof, we provide a seamless experience that respects your complexity.",
    icon: "M13 10V3L4 14h7v7l9-11h-7z",
  },
  {
    title: "Authentic Connection",
    desc: "Beyond data and prescriptions, we value the person. We strive to create a warm, measured environment where clients feel seen and heard in a collaborative partnership built on trust.",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 005.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
  },
];
---

<ServiceLayout
  name="Mission & Values | Twilight Psychology"
  description="Discover the core principles that guide Twilight Psychology's mission to provide accessible, affordable, and evidence-based mental health care for all."
>
  <section class="relative py-24 px-4 text-center">
    <div class="max-w-4xl mx-auto relative z-10">
      <h1
        class="text-5xl md:text-7xl font-black text-white mb-6 tracking-tight"
      >
        Purpose & <span class="text-amber-500">Promise</span>
      </h1>
      <p
        class="text-xl text-[#D4CFC7] font-medium max-w-2xl mx-auto leading-relaxed"
      >
        The principles that guide our practice, our clinicians, and your care.
      </p>
    </div>
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-indigo-900/40 via-transparent to-transparent -z-0"
    >
    </div>
  </section>

  <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-2 gap-8 mb-24">
    <div
      class="bg-white/5 backdrop-blur-md border border-white/10 p-10 rounded-[2.5rem] shadow-xl hover:bg-white/10 transition-all duration-300"
    >
      <div
        class="text-amber-500 font-black uppercase tracking-widest text-xs mb-4"
      >
        Our Mission
      </div>
      <p class="text-2xl font-bold text-white leading-snug">
        Twilight Psychology aims to deliver accessible, affordable, and
        evidence-based mental health services for everyone.
      </p>
    </div>

    <div
      class="bg-white/5 backdrop-blur-md border border-white/10 p-10 rounded-[2.5rem] shadow-xl hover:bg-white/10 transition-all duration-300"
    >
      <div
        class="text-amber-500 font-black uppercase tracking-widest text-xs mb-4"
      >
        Our Vision
      </div>
      <p class="text-2xl font-bold text-white leading-snug">
        To create a world where neurodivergent individuals have the clarity and
        support to lead lives of profound purpose and fulfillment.
      </p>
    </div>
  </div>

  <section class="max-w-4xl mx-auto px-4 mb-32">
    <div
      class="bg-indigo-900/20 border border-indigo-800/50 p-8 md:p-12 rounded-[2.5rem]"
    >
      <h2 class="text-3xl font-black text-white mb-6">Our Story</h2>
      <div class="space-y-6 text-indigo-100/90 leading-relaxed font-medium">
        <p>
          Twilight Psychology is a woman-owned, psychologist-led private
          practice based in Lexington, Kentucky. We specialize in providing
          comprehensive mental health services for various psychological
          conditions.
        </p>
        <p>
          Dr. Cornett, the founder, chose the name to reflect her personal
          preference for evening hours. <span class="text-amber-400"
            >Twilight, the time between sunset and dusk, is her favorite time of
            day.</span
          > The name symbolizes our commitment to making mental health services accessible
          and affordable to all.
        </p>
      </div>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-black text-white">Our Core Values</h2>
      <div class="w-20 h-1 bg-amber-500 mx-auto mt-4 rounded-full"></div>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        values.map((value) => (
          <div class="group bg-white/5 hover:bg-white/10 border border-white/5 hover:border-amber-500/30 p-8 rounded-3xl transition-all duration-300">
            <div class="w-12 h-12 bg-indigo-950 border border-indigo-800 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform shadow-lg shadow-black/20">
              <svg
                class="w-6 h-6 text-amber-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={value.icon}
                />
              </svg>
            </div>
            <h3 class="text-xl font-black text-white mb-3 group-hover:text-amber-400 transition-colors">
              {value.title}
            </h3>
            <p class="text-indigo-200/80 leading-relaxed text-sm">
              {value.desc}
            </p>
          </div>
        ))
      }
    </div>
  </section>
</ServiceLayout>
