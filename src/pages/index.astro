---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import { Icon } from "astro-icon/components";
import { Image } from 'astro:assets';


import hero from "../assets/images/hero.webp";

const services = [
  {
    title: "Psychological Evaluations",
    desc: "Comprehensive evaluations for ADHD, Autism, and Learning Disorders with a neuro-affirming lens.",
    icon: "mdi:number-one-circle-outline",
    link: "/services/psychological-evaluations",
  },
  {
    title: "Medication Management",
    desc: "Personalized medication management with our dedicated Psychiatric Nurse Practitioner.",
    icon: "mdi:number-two-circle-outline",
    link: "/services/medication-management",
  },
  {
    title: "Therapy",
    desc: "Individual counseling using evidence-based, neuro-affirming practices.",
    icon: "mdi:number-three-circle-outline",
    link: "/services/therapy",
  },
];

const qualityCareItems = [
  {
    icon: "mdi:earth",
    title: "Nationwide access through Psypact",
    desc: "Get evaluated from almost anywhere. Our psychologist can assess Autism, ADHD, personality disorders, intellectual disabilities, and more across most U.S. states.",
  },
  {
    icon: "mdi:clock-outline",
    title: "Fast, clear answers in 7 days",
    desc: "No long waits for clarity. Self-pay testing is completed and written report is shared within seven days of your intake appointment.",
  },
  {
    icon: "mdi:shield-check-outline",
    title: "Insurance-friendly testing",
    desc: "We accept most commercial insurances, Medicaid, and Medicare—unlike many practices that are cash-pay only for psychological testing.",
  },
  {
    icon: "mdi:medication-outline",
    title: "Integrated medication support",
    desc: "When testing indicates that medication may help, our in-house provider can step in to support your ongoing care.",
  },
  {
    icon: "mdi:video-wireless",
    title: "Flexible & remote appointments",
    desc: "Weekend availability and fully remote testing options make it easier to get care, even if travel or scheduling is a concern.",
    cardClass: "sm:col-span-2 lg:col-span-1",
  },
];
---

<Layout title="Twilight Psychology | Neuro-Affirming Care in Kentucky"
  description="Twilight Psychology offers neuro-affirming psychological evaluations, medication management, and therapy services 
  in Kentucky. We provide accessible, compassionate care for neurodiverse individuals seeking clarity and support on their mental health journey."
  keywords="neurodiverse, psychological evaluations, medication management, therapy, Kentucky, ADHD, Autism, learning disorders, Psypact, remote appointments"
>
  <main class="bg-indigo-950">
    <section class="relative pt-24 pb-24 px-6 bg-indigo-950 overflow-hidden">
      <div
        class="absolute top-0 right-0 -mr-20 -mt-20 w-150 h-150 bg-indigo-500/5 rounded-full blur-[120px]"
      >
      </div>

      <div
        class="max-w-7xl mx-auto flex flex-col items-center text-center relative z-10 py-12"
      >
        <span
          class="px-4 py-1.5 mb-8 text-[10px] font-black tracking-[0.3em] text-[#D4CFC7] uppercase bg-white/5 border border-white/10 rounded-full"
        >
          Now Accepting New Clients
        </span>

        <h1
          class="text-5xl md:text-8xl font-black text-white mb-8 tracking-tighter leading-[0.9]"
        >
          Neurodiverse?<br />
          <span
            class="text-transparent bg-clip-text bg-linear-to-r from-[#D4CFC7] to-white italic"
            >Empower Your Future.</span
          >
        </h1>

        <p
          class="max-w-2xl text-lg md:text-xl text-indigo-200/70 mb-12 leading-relaxed font-medium"
        >
          We offer Top-Tier Behavioral Health Services in Kentucky including
          Psychological Testing, Medication Management, and Therapy.
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="https://heatherlcornett.clientsecure.me/contact-widget"
            class="px-10 py-4 bg-amber-500 text-indigo-950 font-black rounded-xl hover:bg-amber-400 transition-all hover:scale-105 shadow-lg shadow-amber-500/20"
          >
            Schedule an Evaluation
          </a>
          <a
            href="/catalog"
            class="px-10 py-4 bg-transparent text-white border border-white/20 font-black rounded-xl hover:bg-white/5 transition-all"
          >
            Our Services
          </a>
        </div>
      </div>
    </section>

    <section class="py-16 px-6 bg-indigo-950">
      <div class="max-w-6xl mx-auto">
        <div class="relative">
          <div class="absolute inset-0 bg-amber-500/10 blur-3xl rounded-full"></div>
          <Image 
            src={hero}
            alt="Therapy session"
            class="relative w-full h-75 md:h-125 object-cover rounded-3xl shadow-2xl border border-indigo-800"
          />
        </div>
      </div>
    </section>

    <section class="py-16 px-6 bg-indigo-950">
    <div class="max-w-6xl mx-auto">
      <header class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-black text-white mb-4">
          Quality Care, <span class="text-amber-500"
            >Five</span
          > Fewer Hurdles
        </h2>
        <p class="text-indigo-200 text-lg max-w-2xl mx-auto">
          We designed our evaluation process to be faster, more accessible, and affordable to
          navigate—so you can get clear answers without adding an additional stressor.
        </p>
      </header>

      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {qualityCareItems.map((item) => (
          <article
            class={`rounded-3xl bg-indigo-900/20 border border-indigo-800 p-8 transition-all duration-300 hover:bg-indigo-900/30 ${item.cardClass ?? ""}`}
          >
            <Icon name={item.icon} class="w-9 h-9 text-amber-200" />
            <h3 class="text-xl font-black text-white mb-4">
              {item.title}
            </h3>
            <p class="text-indigo-100 leading-relaxed">
              {item.desc}
            </p>
          </article>
        ))}
      </div>
    </div>
    </section>

    <section class="py-24 sm:py-28 lg:py-32 px-6 bg-indigo-950">
      <div class="max-w-7xl mx-auto">
        <div
          class="flex flex-col md:flex-row justify-between items-end mb-20 gap-6"
        >
          <div class="text-left">
            <h2
              class="text-4xl md:text-5xl font-black text-white tracking-tighter"
            >
              How We Can Help
            </h2>
            <div class="w-16 h-1 bg-amber-500 mt-4 rounded-full"></div>
          </div>
          <p
            class="text-[#D4CFC7] font-medium max-w-md text-sm md:text-base opacity-70 italic"
          >
            "Twilight Psychology provides the clinical clarity to navigate
            the journey."
          </p>
        </div>

        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {
            services.map((service) => (
              <div class="group relative flex flex-col rounded-3xl bg-white/2 border border-white/5 hover:border-amber-500/30 transition-all duration-500 overflow-hidden">
                <div class="p-7 sm:p-9 lg:p-10">
                  <Icon name={service.icon} class="w-9 h-9 text-amber-500" />
                  <h3 class="text-xl sm:text-2xl font-black mb-4 text-white tracking-tight group-hover:text-amber-500 transition-colors">
                   {service.title}
                  </h3>
                  <p class="text-indigo-200/70 font-medium text-sm sm:text-base mb-7 leading-relaxed">
                    {service.desc}
                  </p>

                  <a
                    href={service.link}
                    class="inline-flex items-center gap-3 text-xs font-black uppercase tracking-widest text-amber-500/80 group-hover:text-amber-500 transition-colors"
                  >
                    Explore Service
                    <span class="w-8 h-px bg-amber-500/30 group-hover:w-12 group-hover:bg-amber-500 transition-all" />
                  </a>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </main>
</Layout>
