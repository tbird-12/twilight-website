---
import ServiceLayout from '../layouts/ServiceLayout.astro';
import '../styles/global.css';
import logo from "../assets/images/logo.png";

---

<ServiceLayout name="404 Not Found | Twilight Psychology"
  description="The page you're looking for doesn't exist. Explore our services and resources to find the support you need."
>
  <section class="relative py-24 px-6 overflow-hidden border-b border-white/5 min-h-screen flex items-center">
    <div class="absolute inset-0 z-0 opacity-5">
      <img
        src={logo.src}
        class="w-full h-full object-cover"
        alt="Background"
      />
    </div>
    <div class="max-w-4xl mx-auto text-center relative z-20 w-full">
      <span class="px-4 py-1.5 mb-6 text-[10px] font-black tracking-[0.4em] text-amber-500 uppercase bg-amber-500/10 border border-amber-500/20 rounded-full inline-block">
        Page Not Found
      </span>
      
      <h1 class="text-8xl md:text-9xl font-black text-white mb-6 tracking-tighter leading-[0.9]">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-500 to-white">
          404
        </span>
      </h1>
      
      <h2 class="text-4xl md:text-5xl font-black text-white mb-6 tracking-tight">
        Lost in the Twilight
      </h2>
      
      <p class="text-xl text-indigo-200/70 font-medium max-w-2xl mx-auto leading-relaxed mb-12">
        The page you're looking for doesn't exist or has been moved to another location.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="/"
          class="inline-block bg-amber-500 text-indigo-950 px-8 py-4 rounded-full font-black text-sm hover:bg-amber-400 hover:ring-4 hover:ring-amber-500/30 transition-all shadow-lg shadow-amber-500/20 active:scale-95"
        >
          Back to Home
        </a>
        
        <a
          href="/about/twilight-psychology"
          class="inline-block bg-white/10 text-[#D4CFC7] px-8 py-4 rounded-full font-black text-sm border border-white/20 hover:bg-white/20 hover:border-white/40 transition-all"
        >
          Learn More About Us
        </a>
      </div>

      <div class="mt-16 pt-12 border-t border-white/10">
        <p class="text-indigo-200/50 text-sm mb-6 font-bold">Need Help?</p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a
            href="tel:8596875843"
            class="flex items-center gap-2 text-amber-500 font-black hover:text-amber-400 transition-colors"
          >
            <span>üìû</span> (859) 687-5843
          </a>
          <a
            href="/resources/faq"
            class="flex items-center gap-2 text-amber-500 font-black hover:text-amber-400 transition-colors"
          >
            <span>‚ùì</span> FAQ
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
