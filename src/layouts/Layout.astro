---
// This is the "Frontmatter" where you can pass data to the layout
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-slate-50 font-['Inter',sans-serif] text-slate-900 flex flex-col min-h-screen">
		
		<nav class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-100">
			<div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
				<a href="/" class="text-2xl font-bold tracking-tight text-indigo-900">
					Twilight<span class="font-light">Psychology</span>
				</a>
				
				<div class="hidden md:flex gap-8 text-sm font-medium">
					<a href="/services" class="hover:text-indigo-600 transition">Services</a>
					<a href="/testing" class="hover:text-indigo-600 transition">Testing</a>
					<a href="/therapy" class="hover:text-indigo-600 transition">Therapy</a>
					<a href="/about" class="hover:text-indigo-600 transition">About Us</a>
					<a href="/contact" class="bg-indigo-900 text-white px-5 py-2 rounded-full hover:bg-indigo-800 transition">Contact</a>
				</div>
			</div>
		</nav>

		<main class="grow">
			<slot /> </main>

		<footer class="bg-slate-900 text-slate-400 py-12 px-6">
			<div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-12">
				<div class="col-span-2">
					<h2 class="text-white text-xl font-bold mb-4">Twilight Psychology</h2>
					<p class="max-w-sm mb-4">Providing evidence-based, neuro-affirming psychological services in Lexington, KY.</p>
					<p class="text-sm">Â© 2026 Twilight Psychology. All rights reserved.</p>
				</div>
				<div>
					<h3 class="text-white font-semibold mb-4">Quick Links</h3>
					<ul class="space-y-2 text-sm">
						<li><a href="/insurance" class="hover:text-white">Insurance & Rates</a></li>
						<li><a href="/forms" class="hover:text-white">Patient Forms</a></li>
						<li><a href="/privacy" class="hover:text-white">Privacy Policy</a></li>
					</ul>
				</div>
				<div>
					<h3 class="text-white font-semibold mb-4">Location</h3>
					<p class="text-sm">Lexington, Kentucky</p>
					<p class="text-sm">Phone: (859) 687-5843</p>
				</div>
			</div>
		</footer>

	</body>
</html>

<style is:global>
    /* Add any global CSS transitions or base styles here */
	:root {
		--accent-gradient: linear-gradient(45deg, #4f46e5, #818cf8);
	}
</style>