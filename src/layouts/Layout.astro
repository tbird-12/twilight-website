---

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Announcements from '../components/Announcements.astro';	

// This is the "Frontmatter" where you can pass data to the layout
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-50 font-['Inter',sans-serif] text-slate-900 flex flex-col min-h-screen">

		<Announcements />
		<Header />

		<main class="grow">
			<slot /> 
		</main>

		<Footer/>

	</body>
</html>

<style is:global>
    /* Add any global CSS transitions or base styles here */
	:root {
		--accent-gradient: linear-gradient(45deg, #4f46e5, #818cf8);
	}
</style>