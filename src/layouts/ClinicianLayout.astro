---
import Layout from './Layout.astro';
import '../styles/global.css'
const { name, title, specialty, imageEmoji } = Astro.props;
---

<Layout title={`${name} | ${title} | Twilight Psychology`}>
  <main class="bg-slate-50 dark:bg-slate-950 py-16 md:py-24">
    <div class="max-w-5xl mx-auto px-6">
      
      <a href="/about" class="inline-flex items-center text-sm font-bold text-indigo-600 mb-8 hover:translate-x-[-4px] transition-transform">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M15 19l-7-7 7-7" stroke-width="2.5"></path></svg>
        Back to Team
      </a>

      <div class="grid md:grid-cols-12 gap-12 items-start">
        <div class="md:col-span-4 sticky top-28">
          <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 p-6 rounded-3xl shadow-sm">
            <div class="aspect-square bg-indigo-50 dark:bg-slate-800 rounded-2xl flex items-center justify-center text-7xl mb-6 shadow-inner">
              {imageEmoji || "ðŸŒ™"}
            </div>
            <h1 class="text-2xl font-black text-slate-900 dark:text-white leading-tight mb-2">{name}</h1>
            <p class="text-indigo-600 font-bold mb-4">{title}</p>
            <div class="space-y-2 border-t pt-4">
              <p class="text-xs uppercase tracking-widest font-black text-slate-400">Primary Focus</p>
              <p class="text-sm font-bold text-slate-700 dark:text-slate-300">{specialty}</p>
            </div>
          </div>
        </div>

        <div class="md:col-span-8">
          <div class="prose prose-lg prose-slate dark:prose-invert max-w-none">
            <slot />
          </div>
          
          <div class="mt-12 p-8 bg-indigo-900 rounded-3xl text-white">
            <h3 class="text-2xl font-bold mb-2">Ready to start?</h3>
            <p class="mb-6 opacity-90">Schedule a consultation or evaluation with {name.split(' ')[1]} today.</p>
            <a href="/contact" class="inline-block bg-white text-indigo-900 px-8 py-3 rounded-full font-black hover:bg-indigo-50 transition">
              Request Appointment
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>