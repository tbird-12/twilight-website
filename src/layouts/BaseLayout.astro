---
const { title = "Twilight Psychology" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- SEO -->
    <meta
      name="description"
      content="Twilight Psychology provides psychological testing, therapy, and medication management with fast turnaround and neuroaffirmative care."
    />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" />

    <!-- Tailwind (handled by Astro integration) -->
  </head>

  <body class="min-h-screen flex flex-col bg-white text-gray-900">
    <!-- Header (optional slot) -->
    <header class="w-full">
      <slot name="header" />
    </header>

    <!-- Main content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer (optional slot) -->
    <footer class="mt-12">
      <slot name="footer" />
    </footer>
  </body>
</html>