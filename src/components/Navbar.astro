---
// No JS needed; Astro handles hydration only if you add it.
---

<header class="fixed top-0 left-0 w-full bg-white/70 backdrop-blur z-50 shadow-sm">
  <nav class="max-w-7xl mx-auto flex items-center justify-between py-4 px-6">
    <h1 class="text-xl font-semibold text-brand-dark">Twilight Psychology</h1>

    <div class="hidden md:flex gap-8 text-sm font-medium">
      <a href="#services" class="hover:text-brand-dark transition">Services</a>
      <a href="#about" class="hover:text-brand-dark transition">About</a>
      <a href="#contact" class="hover:text-brand-dark transition">Contact</a>
    </div>

    <button class="hidden md:block px-5 py-2 rounded-full bg-brand text-white font-medium shadow hover:bg-brand-dark transition">
      Book a Session
    </button>

    <button id="menuBtn" class="md:hidden text-brand-dark text-2xl">â˜°</button>
  </nav>

  <div id="mobileMenu" class="hidden flex-col bg-white/90 backdrop-blur px-6 pb-4 md:hidden">
    <a href="#services" class="py-2">Services</a>
    <a href="#about" class="py-2">About</a>
    <a href="#contact" class="py-2">Contact</a>
    <button class="mt-3 px-5 py-2 rounded-full bg-brand text-white font-medium shadow hover:bg-brand-dark transition">
      Book a Session
    </button>
  </div>

  <script>
    const menuBtn = document.getElementById("menuBtn");
    const mobileMenu = document.getElementById("mobileMenu");

    menuBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  </script>
</header>