  <div class="max-w-7xl mx-auto px-4 sm:px-6 h-16 sm:h-20 flex items-center justify-between">
    
    <a href="/" class="text-lg sm:text-2xl font-black tracking-tighter text-white hover:scale-105 duration-200 transition-transform">
      <span class="text-stone-300">Twilight Psychology</span>
    </a>

    <!-- Mobile menu button -->
    <button id="mobileMenuBtn" class="md:hidden text-white p-2">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path id="menuIcon" d="M4 6h16M4 12h16M4 18h16" stroke-width="2" stroke-linecap="round"></path>
        <path id="closeIcon" class="hidden" d="M6 18L18 6M6 6l12 12" stroke-width="2" stroke-linecap="round"></path>
      </svg>
    </button>

    <!-- Desktop Navigation 
    <nav class="hidden md:flex items-center gap-6 lg:gap-10">
       
      <div class="group relative py-2">
        <button class="flex items-center gap-1 text-sm font-bold text-indigo-100 hover:text-amber-400 transition">
