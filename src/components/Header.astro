---
const clinicians = [
  { name: 'Dr. Heather Cornett', slug: 'heather-cornett', spec: 'Adult Autism' },
  { name: 'Dr. Jane Smith', slug: 'jane-smith', spec: 'Child Psychology' },
  // ... add your other 8 clinicians
];
---

<header class="sticky top-0 z-50 w-full bg-white/95 backdrop-blur-sm border-b border-slate-100 dark:bg-slate-900/95 dark:border-slate-800">
  <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
    
    <a href="/" class="text-2xl font-black tracking-tighter text-indigo-950 dark:text-white">
      <span class="text-amber-500">Twilight Psychology</span>
    </a>

    <nav class="hidden md:flex items-center gap-10">
       <a href="/" class="text-sm font-bold text-gray-600 hover:text-amber-600 transition-colors duration-200">
       Home</a>

      <div class="group relative py-2">
        <button class="flex items-center gap-1 text-sm font-bold text-gray-600 hover:text-amber-500 transition">
          About Us
          <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 9l-7 7-7-7" stroke-width="3"></path></svg>
        </button>

        <div class="absolute left-0 mt-3 w-72 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 translate-y-2 group-hover:translate-y-0 bg-white dark:bg-slate-900 border-t-4 border-t-amber-500 shadow-2xl rounded-b-2xl p-3 z-50">
          <div class="text-[10px] uppercase tracking-widest text-indigo-900/40 dark:text-slate-500 font-black px-3 py-2">Our Specialists</div>
          <div class="max-h-80 overflow-y-auto custom-scrollbar">
            {clinicians.map((person) => (
              <a href={`/about/${person.slug}`} class="block px-3 py-3 rounded-xl hover:bg-indigo-50 dark:hover:bg-slate-800 transition-colors group/item">
                <div class="text-sm font-black text-indigo-950 dark:text-slate-100 group-hover/item:text-amber-600">
                  {person.name}
                </div>
                <div class="text-[11px] font-bold text-slate-400 uppercase">{person.spec}</div>
              </a>
            ))}
          </div>
        </div>
      </div>

      <a href="/services" class="text-sm font-bold text-gray-600 hover:text-amber-600 transition-colors duration-200">
        Services
      </a>

      <a href="/contact" class="bg-amber-500 text-indigo-950 px-8 py-3 rounded-full font-black text-sm hover:bg-amber-600 hover:ring-4 hover:ring-amber-500/30 transition-all shadow-lg shadow-amber-500/20 active:scale-95">
        Contact Us
      </a>
    </nav>

  </div>
</header>

<script>
  // Script to handle mobile click if user isn't on a desktop
  const btn = document.getElementById('dropdownRealButton');
  const menu = document.getElementById('dropdownMenu');

  btn?.addEventListener('click', (e) => {
    if (window.innerWidth < 768) { // Only trigger click logic on mobile/tablet
      e.preventDefault();
      menu?.classList.toggle('opacity-100');
      menu?.classList.toggle('visible');
    }
  });
</script>

<style>
  /* Optional: Make the long list of 10 names scrollable if it gets too long */
  .custom-scrollbar::-webkit-scrollbar {
    width: 4px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #e2e8f0;
    border-radius: 10px;
  }
</style>