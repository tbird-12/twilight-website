---
const clinicians = [
  { name: 'Dr. Heather Cornett', slug: 'heather-cornett', spec: 'Adult Autism' },
  { name: 'Dr. Jane Smith', slug: 'jane-smith', spec: 'Child Psychology' },
  // ... add your other 8 clinicians
];
---

<header class="sticky top-0 z-50 w-full bg-white/90 backdrop-blur-md border-b border-slate-100 dark:bg-slate-900/90 dark:border-slate-800">
  <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
    <a href="/" class="text-2xl font-bold text-indigo-900 dark:text-white shrink-0">
      Twilight Psychology
    </a>

    <nav class="hidden md:flex items-center gap-8">
      <a href="/" class="hover:text-indigo-600 transition font-medium">Home</a>

      <div class="relative group py-2">
        <button class="flex items-center gap-1 hover:text-indigo-600 transition font-semibold" id="dropdownRealButton">
          About Us
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 9l-7 7-7-7" stroke-width="2"></path></svg>
        </button>

        <div class="absolute left-0 mt-2 w-64 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 bg-white dark:bg-slate-800 border border-slate-100 dark:border-slate-700 shadow-xl rounded-xl p-2 z-50" id="dropdownMenu">
          <div class="text-[10px] uppercase tracking-widest text-slate-400 font-bold px-3 py-2">Our Clinicians</div>
          <div class="max-h-80 overflow-y-auto custom-scrollbar">
            {clinicians.map((person) => (
              <a href={`/about/${person.slug}`} class="block px-3 py-2 rounded-lg hover:bg-indigo-50 dark:hover:bg-slate-700 transition">
                <div class="text-sm font-bold text-slate-800 dark:text-slate-100">{person.name}</div>
                <div class="text-xs text-slate-500 dark:text-slate-400">{person.spec}</div>
              </a>
            ))}
          </div>
        </div>
      </div>

      <a href="/services" class="hover:text-indigo-600 transition font-medium">Services</a>
      <a href="/contact" class="bg-indigo-900 text-white px-6 py-2 rounded-full font-bold hover:bg-indigo-800 transition">Contact</a>
    </nav>

    <button class="md:hidden p-2 text-slate-600" id="mobileMenuBtn">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 6h16M4 12h16m-7 6h7" stroke-width="2"></path></svg>
    </button>
  </div>
</header>

<script>
  // Script to handle mobile click if user isn't on a desktop
  const btn = document.getElementById('dropdownRealButton');
  const menu = document.getElementById('dropdownMenu');

  btn?.addEventListener('click', (e) => {
    if (window.innerWidth < 768) { // Only trigger click logic on mobile/tablet
      e.preventDefault();
      menu?.classList.toggle('opacity-100');
      menu?.classList.toggle('visible');
    }
  });
</script>

<style>
  /* Optional: Make the long list of 10 names scrollable if it gets too long */
  .custom-scrollbar::-webkit-scrollbar {
    width: 4px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #e2e8f0;
    border-radius: 10px;
  }
</style>