  { name: 'Dr. Heather Cornett', slug: 'heather-cornett', spec: 'Adult Autism' },
  { name: 'Dr. Alex Rivera', slug: 'alex-rivera', spec: 'Anxiety Disorders & Trauma Therapy' },
  { name: 'Dr. Jane Smith', slug: 'jane-smith', spec: 'Child Psychology' },
  { name: 'Sarah Mitchell', slug: 'sarah-mitchell', spec: 'Cognitive Behavioral Therapy' },
  { name: 'Dr. James Patterson', slug: 'james-patterson', spec: 'Medication Management' },
  { name: 'Elena Rodriguez', slug: 'elena-rodriguez', spec: 'Grief Counseling' },
  { name: 'Dr. Lisa Chen', slug: 'lisa-chen', spec: 'Psychiatric Evaluation' },
  { name: 'Marcus Johnson', slug: 'marcus-johnson', spec: 'Couples Therapy' },
];

const services = [
  { name: 'Autism Testing', slug: 'autism-testing', desc: 'Comprehensive autism evaluations' },
  { name: 'ADHD Testing', slug: 'adhd-testing', desc: 'ADHD assessments and diagnostics' },
  { name: 'Psychological Evaluations', slug: 'psychological-evaluations', desc: 'Full psychological assessments' },
  { name: 'Therapy', slug: 'therapy', desc: 'Individual and group therapy' },
  { name: 'Medication Management', slug: 'medication-management', desc: 'Psychiatric medication management' },
];

const clientResources = [
  { name: 'Fees', slug: 'fees', desc: 'Pricing and payment options' },
  { name: 'FAQ', slug: 'faq', desc: 'Frequently asked questions' },
  { name: 'Waitlist Times', slug: 'waitlist-times', desc: 'Current appointment availability' },
  { name: 'New Client', slug: 'new-client', desc: 'Getting started guide' },
  { name: 'Returning Client', slug: 'returning-client', desc: 'Resources for existing clients' },
];
---

<header class="sticky top-0 z-50 w-full bg-indigo-950/95 backdrop-blur-sm border-b border-indigo-900 dark:bg-indigo-950/95 dark:border-indigo-900">
  <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
    
    <a href="/" class="text-2xl font-black tracking-tighter text-white dark:text-white">
      <span class="text-amber-500">Twilight Psychology</span>
    </a>

    <nav class="hidden md:flex items-center gap-10">
       <a href="/" class="text-sm font-bold text-indigo-100 hover:text-amber-400 transition-colors duration-200">
       Home</a>

      <div class="group relative py-2">
        <button class="flex items-center gap-1 text-sm font-bold text-indigo-100 hover:text-amber-400 transition">
          About Us
          <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 9l-7 7-7-7" stroke-width="3"></path></svg>
        </button>

        <div class="absolute left-0 mt-3 w-72 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 translate-y-2 group-hover:translate-y-0 bg-indigo-900 dark:bg-indigo-900 border-t-4 border-t-amber-500 shadow-2xl rounded-b-2xl p-3 z-50">
          <div class="text-[10px] uppercase tracking-widest text-indigo-200/60 dark:text-indigo-300/60 font-black px-3 py-2">Our Specialists</div>
          <div class="max-h-80 overflow-y-auto custom-scrollbar">
            {staff.map((person) => (
              <a href={`/about/${person.slug}`} class="block px-3 py-3 rounded-xl hover:bg-indigo-800 dark:hover:bg-indigo-800 transition-colors group/item">
                <div class="text-sm font-black text-indigo-100 dark:text-indigo-100 group-hover/item:text-amber-400">
                  {person.name}
                </div>
                <div class="text-[11px] font-bold text-indigo-200 uppercase">{person.spec}</div>
              </a>
            ))}
          </div>
        </div>
      </div>

      <div class="group relative py-2">
        <button class="flex items-center gap-1 text-sm font-bold text-indigo-100 hover:text-amber-400 transition">
          Services
          <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 9l-7 7-7-7" stroke-width="3"></path></svg>
        </button>

        <div class="absolute left-0 mt-3 w-72 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 translate-y-2 group-hover:translate-y-0 bg-indigo-900 dark:bg-indigo-900 border-t-4 border-t-amber-500 shadow-2xl rounded-b-2xl p-3 z-50">
          <div class="text-[10px] uppercase tracking-widest text-indigo-200/60 dark:text-indigo-300/60 font-black px-3 py-2">Our Services</div>
          <div class="max-h-80 overflow-y-auto custom-scrollbar">
            {services.map((service) => (
              <a href={`/services/${service.slug}`} class="block px-3 py-3 rounded-xl hover:bg-indigo-800 dark:hover:bg-indigo-800 transition-colors group/item">
                <div class="text-sm font-black text-indigo-100 dark:text-indigo-100 group-hover/item:text-amber-400">
                  {service.name}
                </div>
                <div class="text-[11px] font-bold text-indigo-200">{service.desc}</div>
              </a>
            ))}
          </div>
        </div>
      </div>

      <div class="group relative py-2">
        <button class="flex items-center gap-1 text-sm font-bold text-indigo-100 hover:text-amber-400 transition">
          Client Resources
          <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 9l-7 7-7-7" stroke-width="3"></path></svg>
        </button>

        <div class="absolute left-0 mt-3 w-72 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 translate-y-2 group-hover:translate-y-0 bg-indigo-900 dark:bg-indigo-900 border-t-4 border-t-amber-500 shadow-2xl rounded-b-2xl p-3 z-50">
          <div class="text-[10px] uppercase tracking-widest text-indigo-200/60 dark:text-indigo-300/60 font-black px-3 py-2">Client Resources</div>
          <div class="max-h-80 overflow-y-auto custom-scrollbar">
            {clientResources.map((resource) => (
              <a href={`/resources/${resource.slug}`} class="block px-3 py-3 rounded-xl hover:bg-indigo-800 dark:hover:bg-indigo-800 transition-colors group/item">
                <div class="text-sm font-black text-indigo-100 dark:text-indigo-100 group-hover/item:text-amber-400">
                  {resource.name}
                </div>
                <div class="text-[11px] font-bold text-indigo-200">{resource.desc}</div>
              </a>
            ))}
          </div>
        </div>
      </div>

      <a href="/contact" class="bg-amber-500 text-indigo-950 px-8 py-3 rounded-full font-black text-sm hover:bg-amber-400 hover:ring-4 hover:ring-amber-500/30 transition-all shadow-lg shadow-amber-500/20 active:scale-95">
        Contact Us
      </a>
    </nav>

  </div>
</header>

<script>
  // Script to handle mobile click if user isn't on a desktop
  const btn = document.getElementById('dropdownRealButton');
  const menu = document.getElementById('dropdownMenu');

  btn?.addEventListener('click', (e) => {
    if (window.innerWidth < 768) { // Only trigger click logic on mobile/tablet
      e.preventDefault();
      menu?.classList.toggle('opacity-100');
      menu?.classList.toggle('visible');
    }
  });
</script>

<style>
  /* Optional: Make the long list of 10 names scrollable if it gets too long */
  .custom-scrollbar::-webkit-scrollbar {
    width: 4px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #e2e8f0;
    border-radius: 10px;
  }
</style>