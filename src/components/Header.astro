---
const links = [
  { name: 'Home', href: '/' },
  { name: 'Features', href: '#features' },
  { name: 'About', href: '/about' },
];
---

<header class="sticky top-0 z-40 w-full backdrop-blur flex-none border-b border-gray-200 dark:border-slate-800 bg-white/90 dark:bg-slate-900/90">
  <div class="max-w-7xl mx-auto w-full md:flex md:justify-between px-4 py-3 md:px-6">
    <div class="flex justify-between items-center">
      <a class="flex items-center" href="/">
        <span class="text-2xl font-bold text-gray-900 dark:text-white">ðŸš€ AstroWind</span>
      </a>
      
      <button class="md:hidden p-2 rounded-lg" type="button" aria-label="Toggle Menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 6h16M4 12h16m-7 6h7"></path></svg>
      </button>
    </div>

    <nav class="hidden md:flex items-center w-full md:w-auto text-gray-600 dark:text-slate-200">
      <ul class="flex flex-col md:flex-row md:self-center w-full md:w-auto text-xl md:text-base">
        {links.map(({ name, href }) => (
          <li>
            <a class="font-medium hover:text-blue-600 px-4 py-3 flex items-center transition duration-150 ease-in-out" href={href}>
              {name}
            </a>
          </li>
        ))}
      </ul>
      <div class="md:self-center flex items-center mb-4 md:mb-0 ml-2">
         <a href="https://github.com" class="btn-primary px-5 py-2 font-semibold text-white bg-blue-600 rounded-md">Download</a>
      </div>
    </nav>
  </div>
</header>