---
import logo from "../assets/images/logo.png";

const siteUrl = Astro.site || "http://localhost:4321";

const imageUrl = new URL(logo.src, siteUrl).href;

const { type = "WebSite", name, description, ...extra } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "MedicalBusiness",
  name: "Twilight Psychology",
  address: {
    "@type": "PostalAddress",
    streetAddress: "501 Darby Creed Rd, Suite 7",
    addressLocality: "Lexington",
    addressRegion: "KY",
    postalCode: "40509",
    addressCountry: "US",
  },
  image: {
    "@type": "ImageObject",
    url: imageUrl,
    height: "400",
    width: "400",
  },
  logo: imageUrl,
  hasOfferCatalog: {
    "@type": "OfferCatalog",
    name: "Psychological Services",
    itemListElement: [
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "PsychologicalTreatment",
          name: "Cognitive Behavioral Therapy (CBT)",
          description: "Evidence-based counseling for anxiety and depression.",
        },
      },
    ],
  },
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
